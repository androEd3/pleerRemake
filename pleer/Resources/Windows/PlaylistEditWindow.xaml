<Window x:Class="pleer.Resources.Windows.PlaylistEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pleer.Resources.Windows"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d" Background="#1e1e1e"
            Height="450" Width="600"
            ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Margin="25 10"
                   Text="Метаданные плейлиста"
                   VerticalAlignment="Bottom"
                   Style="{StaticResource MainInfoPanel}"/>

        <Viewbox Grid.Row="1" Margin="0 5" 
                 Stretch="Uniform">
            <Grid Margin="0 5" Name="AlbumCoverGrid">
                <Border Width="100" Height="100" CornerRadius="5">
                    <Border.Background>
                        <ImageBrush x:Name="AlbumCoverDemonstrate"
                                    ImageSource="/Resources/ServiceImages/DefaultCover.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <Border Visibility="Collapsed" CornerRadius="5"
                        Name="ChangeAlbumCoverGrid"
                        MouseLeftButtonDown="ChangeAlbumCoverGrid_Click"
                        Background="#CC000000" Cursor="Hand">
                    <materialDesign:PackIcon Kind="ImageEditOutline" Foreground="#eee"
                                             VerticalAlignment="Center" HorizontalAlignment="Center"
                                             Width="75" Height="75"/>
                </Border>
            </Grid>
        </Viewbox>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0 5 15 0"
                    Name="InfoTextBlockPanel"
                    VerticalAlignment="Top">
            <TextBlock Grid.ColumnSpan="2" Margin="5 0"
                       Text="Название"
                       Style="{StaticResource SmallMainInfoPanel}"/>
            <TextBox Name="AlbumTitle" Style="{StaticResource MainIngutField}"/>

            <StackPanel Name="DescriptionPanel" Visibility="Collapsed">
                <TextBlock Grid.ColumnSpan="2" Margin="5 15 0 0"
                           Text="Описание"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBox Name="PlaylistDescription" Height="125" TextWrapping="Wrap"
                         Style="{StaticResource MainIngutField}"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="2" Margin="25 5"
                   Name="ErrorNoticePanel"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Style="{StaticResource SmallErrorPanel}"/>
        
        <Button Grid.Column="1" Grid.Row="2" Margin="0 5" Padding="10"
                Content="Сохранить изменения" Click="SaveChangesButton_Click"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Style="{StaticResource SimpleButton}"/>
    </Grid>
</Window>
