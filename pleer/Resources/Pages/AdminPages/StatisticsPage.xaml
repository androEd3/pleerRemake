<Page x:Class="pleer.Resources.Pages.AdminPages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.AdminPages"
        mc:Ignorable="d">

    <Grid Margin="5 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Padding="10" Style="{StaticResource NonFunctionalField22}">
            <TextBlock Text="Статистика данных"
                   Style="{StaticResource MainInfoPanel}"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="20 15" Orientation="Horizontal" Visibility="Collapsed">
            <TextBlock Text="Отчет от:" TextWrapping="Wrap"
                       Style="{StaticResource SmallMainInfoPanel}"/>
            <DatePicker Name="StartDateSelector" Margin="10 0"
                        SelectedDateChanged="DateSelector_SelectedDateChanged"
                        FirstDayOfWeek="Monday" SelectedDateFormat="Short"/>

            <TextBlock Text="до:" TextWrapping="Wrap"
                       Style="{StaticResource SmallMainInfoPanel}"/>
            <DatePicker Name="EndDateSelector" Margin="10 0"
                        SelectedDateChanged="DateSelector_SelectedDateChanged"
                        FirstDayOfWeek="Monday" SelectedDateFormat="Short"/>
        </StackPanel>

        <Button Grid.Row="1" Margin="20 0" Padding="10" Visibility="Collapsed"
                Content="Получить локальные данные" Click="UpdateReportDataButton_Click"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Style="{StaticResource SimpleButton}"/>

        <ScrollViewer Grid.Row="2" Style="{StaticResource MinimalScrollViewer}">
            <Grid Margin="5 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1" Text="Всего слушателей:"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 5"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="TotalListeners" Margin="10 5"
                           TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" 
                           Style="{StaticResource SmallMainInfoPanel}"/>


                <TextBlock Grid.Row="4" Text="Всего плейлистов:"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 5"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Name="TotalPlaylists" Margin="10 5"
                           TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" 
                           Style="{StaticResource SmallMainInfoPanel}"/>

                <TextBlock Grid.Row="6" Text="Самая популярная песня:"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 10 10 5"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Name="MostPopularSong" Margin="10 10 10 5"
                           TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" 
                           Style="{StaticResource SmallMainInfoPanel}"/>

                <TextBlock Grid.Row="7" Text="Самый популярный альбом:"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 5"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Name="MostPopularAlbum" Margin="10 5"
                           TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" 
                           Style="{StaticResource SmallMainInfoPanel}"/>

                <TextBlock Grid.Row="8" Text="Самый популярный исполнитель:"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                           Style="{StaticResource SmallMainInfoPanel}"/>
                <TextBlock Grid.Row="8" Grid.Column="1" Name="MostPopularArtist" Margin="10"
                           TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" 
                           Style="{StaticResource SmallMainInfoPanel}"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
