<Page x:Class="pleer.Resources.Pages.AdminPages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.AdminPages"
        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.RowSpan="2" x:Name="LoadingIndicator" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
            <TextBlock Text="Загрузка статистики..." 
                       HorizontalAlignment="Center" Margin="0 10 0 0"
                       Style="{StaticResource SmallMainInfoPanel}"/>
        </StackPanel>

        <Border Name="TitleBorder" Margin="5 0 0 5" Padding="10"
                Style="{StaticResource NonFunctionalField22}">
            <TextBlock Text="Статистика сервиса" 
                       Style="{StaticResource MainInfoPanel}"/>
        </Border>

        <ScrollViewer Grid.Row="1" x:Name="ContentPanel" Style="{StaticResource MinimalScrollViewer}">
            <StackPanel Margin="20">
                <TextBlock Text="Данные приложения" Margin="0 0 0 20"
                           Style="{StaticResource ArtistNameCenterPanel}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                        <TextBlock Text="Слушателей" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="TotalListeners" Text="0" Margin="5"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Плейлистов" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="TotalPlaylists" Text="0" Margin="5"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                    </StackPanel>
                </Grid>

                <Border Height="1" Background="LightGray" Margin="0 20"/>

                <TextBlock Text="Archive.org" Margin="0 0 0 20"
                           Style="{StaticResource ArtistNameCenterPanel}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                        <TextBlock Text="Всего аудио" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="TotalSongs" Text="..." Margin="5"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Музыкальных записей" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="TotalMusicItems" Text="..." Margin="5"
                                   Style="{StaticResource SmallMainInfoPanel}"/>
                    </StackPanel>
                </Grid>

                <Border Height="1" Background="LightGray" Margin="0 20"/>

                <TextBlock Text="Популярное" Margin="0 0 0 20"
                           Style="{StaticResource ArtistNameCenterPanel}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0 0 15 0">
                        <TextBlock Text="🎵 Трек" Margin="0 0 0 10" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="MostPopularSong" Text="..." Style="{StaticResource SmallMainInfoPanel}" TextTrimming="CharacterEllipsis"/>
                        <TextBlock x:Name="MostPopularSongArtist" Style="{StaticResource SmallMainInfoPanel}" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0 0 15 0">
                        <TextBlock Text="💿 Альбом" Margin="0 0 0 10" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="MostPopularAlbum" Text="..." Style="{StaticResource SmallMainInfoPanel}" TextTrimming="CharacterEllipsis"/>
                        <TextBlock x:Name="MostPopularAlbumArtist" Style="{StaticResource SmallMainInfoPanel}" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="🎤 Исполнитель" Margin="0 0 0 10" Style="{StaticResource SmallInfoPanel}"/>
                        <TextBlock x:Name="MostPopularArtist" Text="..." Style="{StaticResource SmallMainInfoPanel}"/>
                    </StackPanel>
                </Grid>

                <Border Height="1" Background="LightGray" Margin="0,20"/>

                <TextBlock Text="По жанрам" Margin="0 0 0 10"
                           Style="{StaticResource ArtistNameCenterPanel}"/>

                <StackPanel x:Name="GenreStatsPanel"/>

                <Button Content="Обновить" Click="UpdateReportDataButton_Click"
                        HorizontalAlignment="Left" Margin="0 20 0 0" Padding="15 10"
                        Style="{StaticResource SimpleButton}"/>

                <TextBlock x:Name="ErrorMessage" Foreground="Red" 
                           Visibility="Collapsed" Margin="0 10 0 0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
