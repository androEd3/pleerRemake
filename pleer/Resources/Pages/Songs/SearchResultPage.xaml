<Page x:Class="pleer.Resources.Pages.Songs.SearchResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.Songs"
          mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Песни" Margin="5" Padding="10 5"
            VerticalAlignment="Center"
            Name="SearchSongsButton" Click="SearchTracksButton_Click"
            Style="{StaticResource SimpleButtonV3}"/>

            <Button Content="Альбомы" Margin="5" Padding="10 5"
            VerticalAlignment="Center"
            Name="SearchPlaylistsButton" Click="SearchAlbumsButton_Click"
            Style="{StaticResource SimpleButtonV3}"/>

            <Button Content="Исполнители" Margin="5" Padding="10 5"
            VerticalAlignment="Center"
            Name="SearchArtistsButton" Click="SearchArtistsButton_Click"
            Style="{StaticResource SimpleButtonV3}"/>

            <StackPanel  Orientation="Horizontal" Margin="10 5">
                <TextBlock Text="Жанр:" Margin="0 0 5 0"
                   VerticalAlignment="Center"
                   Style="{StaticResource SmallInfoPanel}"/>

                <ComboBox x:Name="GenreComboBox" Width="125"
                  SelectionChanged="GenreComboBox_SelectionChanged" 
                  Style="{StaticResource SimpleComboBox}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Результаты поиска" 
               HorizontalAlignment="Left" Margin="5"
               Style="{StaticResource MainInfoPanel}"/>

            <StackPanel Name="ContentList"/>
        </StackPanel>
    </Grid>
</Page>
