<Page x:Class="pleer.Resources.Pages.Songs.ListenedHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.Songs"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d">

    <Grid>
        <Button Grid.Column="1" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="ShowHistoryVisibilityButton_Click"
                Name="ShowHistoryButton" Visibility="Collapsed"
                Style="{StaticResource BaseFunctionButton}">
            <materialDesign:PackIcon Kind="ArrowCollapseLeft" Width="30" Height="30"/>
        </Button>
        
        <Grid Name="ListenedHistoryGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Margin="5 0 5 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                           Text="История прослушиваний"
                           Style="{StaticResource SmallMainInfoPanel}"/>

                <Button Grid.Column="1" HorizontalAlignment="Right"
                        Click="HideHistoryVisibilityButton_Click" Margin="10 0 0 0"
                        Style="{StaticResource BaseFunctionButton}">
                    <materialDesign:PackIcon Kind="ArrowCollapseRight" Width="30" Height="30"/>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Name="ListenedSongsListScroll">
                <StackPanel Name="ListenedSongsList">
                    <TextBlock Text="Пока история пуста" 
                               Name="InfoPanel" Margin="0 20"
                               HorizontalAlignment="Center" TextWrapping="Wrap"
                               Style="{StaticResource SmallInfoPanel}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
