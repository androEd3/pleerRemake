<Page x:Class="pleer.Resources.Pages.UserPages.ArtistProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.UserPages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" >

    <ScrollViewer VerticalScrollBarVisibility="Auto" Name="AlbumContent"
                  Style="{StaticResource MinimalScrollViewer}">
        <StackPanel>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                       Text="Выберите альбом" Name="InformationTextBlock" 
                       Margin="0 35 0 0" Visibility="Collapsed"
                       Style="{StaticResource SmallMainInfoPanel}"/>

            <Border Style="{StaticResource NonFunctionalField22}"
                    Margin="0 0 5 5" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="1"
                              HorizontalAlignment="Left"
                              Width="175" Height="175"
                              Name="UserPictureGrid">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="UserPicture"
                                                ImageSource="/Resources/ServiceImages/DefaultPicture.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>

                        <Grid Grid.Column="1" Margin="15 5"
                              Name="InfoTextBlockPanel" VerticalAlignment="Bottom">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="40"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Исполнитель"
                                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                       Style="{StaticResource SmallInfoPanel}"/>

                            <Viewbox Grid.Row="1" MaxHeight="80"
                                     Stretch="Uniform" StretchDirection="Both"
                                     HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                <TextBlock Name="ArtistName" TextWrapping="Wrap"
                                           MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                           FontSize="20" Style="{StaticResource AlbumNameCenterPanel}"/>
                            </Viewbox>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <Frame Name="ArtistsContentField" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </ScrollViewer>
</Page>
