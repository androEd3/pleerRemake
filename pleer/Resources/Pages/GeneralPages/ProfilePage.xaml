<Page x:Class="pleer.Resources.Pages.GeneralPages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pleer.Resources.Pages.GeneralPages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d">

    <StackPanel Height="405"
                Orientation="Horizontal">
        <Border Padding="30 50 30 30"
                Style="{StaticResource NonFunctionalField2c}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition />
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Профиль"
                           Style="{StaticResource MainInfoPanel}"/>

                <TextBlock Grid.Column="1" 
                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                           MouseLeftButtonUp="Logout_Click"
                           Style="{StaticResource SmallErrorFunctionalPanel}">
                    <InlineUIContainer BaselineAlignment="Center">
                        <materialDesign:PackIcon Kind="Logout"
                                                 Width="25" Height="25"/>
                    </InlineUIContainer>
                    <Run Text="Выйти"/>
                </TextBlock>

                <Grid Grid.Row="1"
                      HorizontalAlignment="Left"
                      Width="175" Height="175"
                      Name="UserPictureGrid">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush x:Name="UserPicture"
                                        ImageSource="/Resources/ServiceImages/DefaultPicture.png"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Grid Name="ChangeProfilePictureGrid"
                          MouseLeftButtonDown="ChangeProfilePicture_Click"
                          Cursor="Hand" Visibility="Collapsed">
                        <Ellipse Fill="Black" Opacity="0.8"/>
                        <materialDesign:PackIcon Kind="ImageEditOutline"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Foreground="#eee"
                                                     Width="125" Height="125"/>
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0 15 0 5">
                    <TextBlock Text="Имя пользователя" Margin="5 0"
                               Style="{StaticResource SmallInfoPanel}"/>
                    <TextBox Name="UserName"
                             Style="{StaticResource MainIngutField}"/>

                    <TextBlock Text="Почта" Margin="5 20 5 0"
                               Style="{StaticResource SmallInfoPanel}"/>
                    <TextBox Name="UserEmail"
                             Style="{StaticResource MainIngutField}"/>

                    <Button Click="ChangePasswordButton_Click"
                            HorizontalAlignment="Left" Margin="5 15 0 0" 
                            Style="{StaticResource HyperLinkButton}">
                        <TextBlock Text="Сменить пароль" TextDecorations="Underline"/>
                    </Button>
                </StackPanel>

                <TextBlock Name="ErrorNoticePanel"
                           TextAlignment="Center" TextWrapping="Wrap"
                           Grid.Row="2" Grid.ColumnSpan="2"
                           Style="{StaticResource SmallErrorPanel}"/>
                <Button Grid.Row="2" Grid.ColumnSpan="2"
                        Content="Сохранить изменения" 
                        Margin="0 35 0 0" Padding="10"
                        HorizontalAlignment="Center"
                        Click="SaveUserDataButton_Click"
                        Style="{StaticResource SimpleButton}"/>
            </Grid>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  ShadowDepth="5" 
                                  Color="Black" 
                                  Opacity="0.25"/>
            </Border.Effect>
        </Border>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                Name="CloseFullWindowFrameButton" Click="CloseFullWindowFrameButton_Click"
                Margin="10 0" Style="{StaticResource BaseFunctionButton}">
            <materialDesign:PackIcon Kind="CloseCircle" Width="40" Height="40"/>
        </Button>
    </StackPanel>
</Page>
